<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/CustomTextViewStyle</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomTextViewStyle" parent="android:Widget.TextView">
    </style>

    <style name="ThemeOverlay.SearchView" parent="Widget.AppCompat.SearchView">
        <!-- Text color -->
        <item name="android:editTextColor">@color/colorWhite</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="searchIcon">@drawable/ic_search_white</item>
        <item name="iconTint">@color/colorWhite</item>
        <item name="closeIconTint">@color/colorWhite</item>
        <item name="tint">@color/colorWhite</item>
        <item name="tintMode">src_in</item>
    </style>

</resources>