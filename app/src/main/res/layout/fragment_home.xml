<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/home_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="@string/home_text_1"
                android:fontFamily="@font/jalnan"
                android:textStyle="bold"
                android:lineSpacingMultiplier="1.3"
                app:layout_constraintStart_toStartOf="@id/home_guide_1"
                app:layout_constraintEnd_toEndOf="@id/home_guide_3"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="20sp"
                />
            
            <TextView
                android:id="@+id/home_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/home_text_1"
                app:layout_constraintStart_toStartOf="@id/home_text_1"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="@string/home_text_2"
                />
            <TextView
                android:id="@+id/home_text_num_of_seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/home_text_2"
                app:layout_constraintStart_toEndOf="@id/home_text_2"
                app:layout_constraintBottom_toBottomOf="@id/home_text_2"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="12sp"
                tools:text="132"
                />
            <TextView
                android:id="@+id/home_text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/home_text_2"
                app:layout_constraintStart_toEndOf="@id/home_text_num_of_seat"
                app:layout_constraintBottom_toBottomOf="@id/home_text_2"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="@string/home_text_3"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintStart_toStartOf="@id/home_guide_3"
                app:layout_constraintEnd_toEndOf="@id/home_guide_2"
                app:layout_constraintTop_toTopOf="@id/home_text_1"
                app:cardCornerRadius="100dp">
                
                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="100dp"
                    >
                    <ImageView
                        android:id="@+id/home_profile_image"
                        android:scaleType="centerCrop"
                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </androidx.cardview.widget.CardView>


            </androidx.cardview.widget.CardView>
            
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/home_guide_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.02"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/home_guide_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.98"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/home_guide_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.7" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/colorPrimary"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                app:cardElevation="0dp"
                app:cardCornerRadius="20dp">
            </androidx.cardview.widget.CardView>
            <EditText
                android:id="@+id/home_searchbar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="50dp"
                android:drawableStart="@drawable/ic_search_black_18dp"
                android:focusable="false"
                android:hint="@string/search_bar_placeholder"
                android:imeOptions="actionSearch"
                android:inputType="none"
                android:padding="4dp"
                android:singleLine="true"
                android:textSize="12sp"
                android:elevation="4dp"
                android:background="@drawable/searchbar_background"
                />
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingVertical="10dp">
            
            <TextView
                android:id="@+id/home_text_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_text_4"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/home_text_category_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="카페"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/home_text_4"/>
            <TextView
                android:id="@+id/home_text_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="@string/home_text_5"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/home_text_category_1"/>

            <TextView
                android:id="@+id/home_text_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="@string/home_text_6"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/home_text_4"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/home_text_category_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="카페"
                android:textColor="@color/colorBlack"
                android:textSize="13sp"
                app:layout_constraintTop_toTopOf="@id/home_text_6"
                app:layout_constraintStart_toEndOf="@id/home_text_6"/>

            <TextView
                android:id="@+id/home_text_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="@string/home_text_7"
                android:textSize="13sp"
                app:layout_constraintTop_toTopOf="@id/home_text_6"
                app:layout_constraintStart_toEndOf="@id/home_text_category_2"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp">

            <TextView
                android:id="@+id/home_text_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_text_8"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/home_text_category_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                tools:text="카페"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/home_text_8"
                />

            <TextView
                android:id="@+id/home_text_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="@string/home_text_9"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/home_text_category_3"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_recommend_recyclerview"
            android:paddingVertical="10dp"
            android:paddingHorizontal="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>