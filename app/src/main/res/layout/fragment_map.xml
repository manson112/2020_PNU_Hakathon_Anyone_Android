<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.MapFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/map_guide_1"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-30dp"
            app:cardCornerRadius="35dp"
            app:cardElevation="0dp">

            <include layout="@layout/activity_background" />

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/detail_arrow"
        app:layout_constraintBottom_toBottomOf="@id/map_guide_2"
        app:layout_constraintStart_toStartOf="@id/map_guide_3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home_text1"
        app:layout_constraintBottom_toBottomOf="@id/map_guide_2"
        app:layout_constraintEnd_toEndOf="@id/map_guide_4"
        app:layout_constraintStart_toStartOf="@id/map_guide_3"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toTopOf="@id/map_guide_7"
        app:layout_constraintEnd_toEndOf="@id/map_guide_6"
        app:layout_constraintStart_toStartOf="@id/map_guide_5"
        app:layout_constraintTop_toBottomOf="@id/map_guide_2">

        <RelativeLayout
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/map_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:src="@drawable/ic_location"
        app:layout_constraintStart_toStartOf="@id/map_guide_5"
        app:layout_constraintTop_toBottomOf="@id/map_guide_1" />

    <TextView
        android:id="@+id/map_current_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/jalnan"
        android:paddingVertical="8dp"
        android:text="주소"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/map_icon"
        app:layout_constraintTop_toBottomOf="@id/map_guide_1" />

    <ProgressBar
        android:id="@+id/map_find_location_progress"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintEnd_toStartOf="@id/map_my_location"
        app:layout_constraintTop_toBottomOf="@id/map_guide_1" />

    <ImageView
        android:id="@+id/map_my_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:src="@drawable/ic_my_location_24px"
        app:layout_constraintEnd_toStartOf="@id/map_guide_6"
        app:layout_constraintTop_toBottomOf="@id/map_guide_1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/map_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/map_guide_6"
        app:layout_constraintStart_toStartOf="@id/map_guide_5"
        app:layout_constraintTop_toBottomOf="@id/map_current_address"
        app:layout_goneMarginTop="8dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/map_guide_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/map_guide_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/map_guide_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/map_guide_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/map_guide_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/map_guide_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/map_guide_7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.58" />

</androidx.constraintlayout.widget.ConstraintLayout>