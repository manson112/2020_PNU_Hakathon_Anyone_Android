<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="12dp"
    android:paddingVertical="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/search_history_item_image"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_search_black_18dp"
        app:layout_constraintBottom_toBottomOf="@id/search_history_item_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/search_history_item_text" />


    <TextView
        android:id="@+id/search_history_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/search_history_item_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Search History" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:gravity="center"
        android:src="@drawable/ic_clear_24px"
        app:layout_constraintBottom_toBottomOf="@id/search_history_item_text"
        app:layout_constraintTop_toTopOf="@id/search_history_item_text"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>