<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".view.activity.StoreDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/detail_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/detail_image_sample"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <ToggleButton
                android:id="@+id/detail_bookmark"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/detail_favorite_btn_selector"
                android:textOff=""
                android:textOn=""
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <ImageView
                android:id="@+id/detail_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/detail_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/detail_btn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/detail_more_btn_background"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="@string/detail_more_photo"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="부산 커피"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/jalnan"
            android:layout_marginStart="20dp"
            />
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:layout_marginHorizontal="20dp">
            <ImageView
                android:id="@+id/detail_icn_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location"
                android:tint="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/detail_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="부산 금정구 장전온천천로 93"
                android:letterSpacing="-0.1"
                app:layout_constraintStart_toEndOf="@id/detail_icn_location"
                app:layout_constraintTop_toTopOf="parent"
                />
        
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/detail_text_background"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            >
            <ImageView
                android:id="@+id/detail_icn_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_battery_filled"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/detail_text_fill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jalnan"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                tools:text="현재 73%예요.\n완충까지 4자리 남았어요"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/detail_icn_battery"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/detail_review_text1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/detail_review_text1"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/detail_review_text2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/detail_review_text2"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.skydoves.progressview.ProgressView
                android:id="@+id/detail_progress_1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:paddingHorizontal="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/detail_review_text1"
                app:layout_constraintEnd_toStartOf="@id/detail_review_text2"
                app:progressView_colorBackground="@color/colorWhite"
                app:progressView_borderColor="@color/colorGrey"
                app:progressView_max="100"
                app:progressView_min="0"
                app:progressView_progress="40"
                app:progressView_radius="12dp"
                app:progressView_autoAnimate="true"
                app:progressView_progressFromPrevious="true"
                app:progressView_colorProgress="@color/colorPrimary"
                app:progressView_labelColorInner="@color/colorWhite"
                app:progressView_labelColorOuter="@color/colorBlack"
                app:progressView_labelSize="12sp"
                app:progressView_labelSpace="8dp"
                app:progressView_labelText="3.5"
                app:progressView_labelTypeface="normal"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/detail_review_text3"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/detail_review_text3"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/detail_review_text4"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/detail_review_text4"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <com.skydoves.progressview.ProgressView
                android:id="@+id/detail_progress_2"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:paddingHorizontal="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/detail_review_text3"
                app:layout_constraintEnd_toStartOf="@id/detail_review_text4"
                app:progressView_colorBackground="@color/colorWhite"
                app:progressView_borderColor="@color/colorGrey"
                app:progressView_max="100"
                app:progressView_min="0"
                app:progressView_progress="40"
                app:progressView_radius="12dp"
                app:progressView_autoAnimate="true"
                app:progressView_progressFromPrevious="true"
                app:progressView_colorProgress="@color/colorPrimary"
                app:progressView_labelColorInner="@color/colorWhite"
                app:progressView_labelColorOuter="@color/colorBlack"
                app:progressView_labelSize="12sp"
                app:progressView_labelSpace="8dp"
                app:progressView_labelText="3.5"
                app:progressView_labelTypeface="normal"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/detail_review_text5"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/detail_review_text5"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/detail_review_text6"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/detail_review_text6"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <com.skydoves.progressview.ProgressView
                android:id="@+id/detail_progress_3"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:paddingHorizontal="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/detail_review_text5"
                app:layout_constraintEnd_toStartOf="@id/detail_review_text6"
                app:progressView_colorBackground="@color/colorWhite"
                app:progressView_borderColor="@color/colorGrey"
                app:progressView_max="100"
                app:progressView_min="0"
                app:progressView_progress="40"
                app:progressView_radius="12dp"
                app:progressView_autoAnimate="true"
                app:progressView_progressFromPrevious="true"
                app:progressView_colorProgress="@color/colorPrimary"
                app:progressView_labelColorInner="@color/colorWhite"
                app:progressView_labelColorOuter="@color/colorBlack"
                app:progressView_labelSize="12sp"
                app:progressView_labelSpace="8dp"
                app:progressView_labelText="3.5"
                app:progressView_labelTypeface="normal"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/detail_review_text7"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/detail_review_text7"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/detail_review_text8"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/detail_review_text8"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <com.skydoves.progressview.ProgressView
                android:id="@+id/detail_progress_4"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:paddingHorizontal="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/detail_review_text7"
                app:layout_constraintEnd_toStartOf="@id/detail_review_text8"
                app:progressView_colorBackground="@color/colorWhite"
                app:progressView_borderColor="@color/colorGrey"
                app:progressView_max="100"
                app:progressView_min="0"
                app:progressView_progress="40"
                app:progressView_radius="12dp"
                app:progressView_autoAnimate="true"
                app:progressView_progressFromPrevious="true"
                app:progressView_colorProgress="@color/colorPrimary"
                app:progressView_labelColorInner="@color/colorWhite"
                app:progressView_labelColorOuter="@color/colorBlack"
                app:progressView_labelSize="12sp"
                app:progressView_labelSpace="8dp"
                app:progressView_labelText="3.5"
                app:progressView_labelTypeface="normal"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="REVIEW"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/jalnan"
            android:layout_marginStart="20dp"
            />
        
    </LinearLayout>
</androidx.core.widget.NestedScrollView>