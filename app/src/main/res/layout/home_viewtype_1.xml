<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:paddingVertical="10dp">

    <TextView
        android:id="@+id/home_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="@string/home_text_1"
        android:fontFamily="@font/jalnan"
        android:textStyle="bold"
        android:lineSpacingMultiplier="1.3"
        app:layout_constraintStart_toStartOf="@id/home_guide_1"
        app:layout_constraintEnd_toEndOf="@id/home_guide_3"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/home_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/home_text_1"
        app:layout_constraintStart_toStartOf="@id/home_text_1"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="@string/home_text_2"
        />
    <TextView
        android:id="@+id/home_text_num_of_seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/home_text_2"
        app:layout_constraintStart_toEndOf="@id/home_text_2"
        app:layout_constraintBottom_toBottomOf="@id/home_text_2"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:textSize="12sp"
        tools:text="132"
        />
    <TextView
        android:id="@+id/home_text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/home_text_2"
        app:layout_constraintStart_toEndOf="@id/home_text_num_of_seat"
        app:layout_constraintBottom_toBottomOf="@id/home_text_2"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="@string/home_text_3"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="@id/home_guide_3"
        app:layout_constraintEnd_toEndOf="@id/home_guide_2"
        app:layout_constraintTop_toTopOf="@id/home_text_1"
        app:cardCornerRadius="100dp">

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="100dp"
            >
            <ImageView
                android:id="@+id/home_profile_image"
                android:scaleType="centerCrop"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/home_guide_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/home_guide_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.98"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/home_guide_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />
</androidx.constraintlayout.widget.ConstraintLayout>

