<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/category0"
    tools:context=".controller.CategoryActivity">

    <ImageView
        android:id="@+id/category_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/category1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/category_13"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/category13"
        app:layout_constraintBottom_toTopOf="@id/category_guide_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_guide_3" />

    <ImageView
        android:id="@+id/category_11"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleX="1.15"
        android:scaleY="1.15"
        android:src="@drawable/category11"
        app:layout_constraintBottom_toTopOf="@id/category_guide_2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/category2"
        app:layout_constraintBottom_toTopOf="@id/category_guide_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/category_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/category14"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/category_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/category15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/category_14"
        app:layout_constraintTop_toBottomOf="@id/category_14" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/category12"
        app:layout_constraintEnd_toStartOf="@id/category_14"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_guide_1">

        <LinearLayout
            android:id="@+id/category_btn_cafe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/category_3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/category3"
                android:scaleType="center"
                android:src="@drawable/category4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="12.6sp"
                android:text="@string/landing_cafe"
                android:textColor="#000000"
                android:textSize="16.8sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/category_btn_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/category_5"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/category5"
                android:scaleType="center"

                android:src="@drawable/category6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="12.6sp"
                android:text="@string/landing_restaurant"
                android:textColor="#000000"
                android:textSize="16.8sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/category_btn_pub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/category_7"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/category7"
                android:scaleType="center"

                android:src="@drawable/category8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="12.6sp"
                android:text="@string/landing_pub"
                android:textColor="#000000"
                android:textSize="16.8sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/category_btn_fastfood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/category_9"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/category9"
                android:scaleType="center"
                android:src="@drawable/category10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="12.6sp"
                android:text="@string/landing_fastfood"
                android:textColor="#000000"
                android:textSize="16.8sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/category_guide_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/category_guide_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.71" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/category_guide_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.68" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/category_guide_4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.518" />
</androidx.constraintlayout.widget.ConstraintLayout>