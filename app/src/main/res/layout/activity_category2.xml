<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.CategoryActivity2">

    <include layout="@layout/activity_background" />

    <ImageView
        android:id="@+id/category2_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_text1"
        app:layout_constraintEnd_toEndOf="@id/category2_guide_2"
        app:layout_constraintStart_toStartOf="@id/category2_guide_1"
        app:layout_constraintTop_toBottomOf="@id/category2_guide_3" />

    <ImageView
        android:id="@+id/category2_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/splash_text2"
        app:layout_constraintEnd_toEndOf="@id/category2_guide_2"
        app:layout_constraintStart_toStartOf="@id/category2_guide_1"
        app:layout_constraintTop_toBottomOf="@id/category2_text1" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="@id/category2_guide_4"
        app:layout_constraintEnd_toEndOf="@id/category2_guide_2"
        app:layout_constraintStart_toStartOf="@id/category2_guide_1"
        app:layout_constraintTop_toTopOf="@id/category2_guide_5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/category2_btn_cafe"
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:paddingHorizontal="10dp">

            <ImageView
                android:id="@+id/category2_1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/category3"
                android:scaleType="center"
                android:src="@drawable/category4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/category2_textview_background"
                android:gravity="center"
                android:letterSpacing="-0.1"
                android:text="@string/landing_cafe"
                android:textColor="@color/colorWhite"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/category2_1"
                app:layout_constraintStart_toStartOf="@id/category2_1"
                app:layout_constraintTop_toBottomOf="@id/category2_grid_guide_1" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/category2_grid_guide_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.8" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/category2_btn_restaurant"
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:paddingHorizontal="10dp">

            <ImageView
                android:id="@+id/category2_2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/category5"
                android:scaleType="center"
                android:src="@drawable/category6"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/category2_textview_background"
                android:gravity="center"
                android:letterSpacing="-0.1"
                android:text="@string/landing_restaurant"
                android:textColor="@color/colorWhite"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/category2_2"
                app:layout_constraintStart_toStartOf="@id/category2_2"
                app:layout_constraintTop_toBottomOf="@id/category2_grid_guide_2" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/category2_grid_guide_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.8" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/category2_btn_pub"
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:paddingHorizontal="10dp">

            <ImageView
                android:id="@+id/category2_3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/category7"
                android:scaleType="center"
                android:src="@drawable/category8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/category2_textview_background"
                android:gravity="center"
                android:letterSpacing="-0.1"
                android:text="@string/landing_pub"
                android:textColor="@color/colorWhite"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/category2_3"
                app:layout_constraintStart_toStartOf="@id/category2_3"
                app:layout_constraintTop_toBottomOf="@id/category2_grid_guide_3" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/category2_grid_guide_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.67" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/category2_btn_fastfood"
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:paddingHorizontal="10dp">

            <ImageView
                android:id="@+id/category2_4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/category9"
                android:scaleType="center"
                android:src="@drawable/category10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/category2_textview_background"
                android:gravity="center"
                android:letterSpacing="-0.1"
                android:text="@string/landing_fastfood"
                android:textColor="@color/colorWhite"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/category2_4"
                app:layout_constraintStart_toStartOf="@id/category2_4"
                app:layout_constraintTop_toBottomOf="@id/category2_grid_guide_4" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/category2_grid_guide_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.67" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </GridLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/category2_guide_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/category2_guide_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.83" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/category2_guide_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/category2_guide_4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/category2_guide_5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>