<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="65dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/home_fragment_item3_cardview"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/home_fragment_item3_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/home_fragment_item3_cardview"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/home_fragment_item3_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_text1"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/home_fragment_item3_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_text2"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>