<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="9dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/bookmark_image_container"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/bookmark_item_store_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/bookmark_item_store_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jalnan"
            android:paddingHorizontal="5dp"
            android:paddingTop="4dp"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/bookmark_item_guide_1"
            app:layout_constraintTop_toBottomOf="@id/bookmark_image_container"
            tools:text="카페" />


        <TextView
            android:id="@+id/bookmark_item_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jalnan"
            android:paddingHorizontal="5dp"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/bookmark_item_guide_1"
            app:layout_constraintTop_toBottomOf="@id/bookmark_item_store_category"
            tools:text="부산커피" />

        <TextView
            android:id="@+id/bookmark_item_store_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jalnan"
            android:paddingHorizontal="5dp"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/bookmark_item_guide_1"
            app:layout_constraintTop_toBottomOf="@id/bookmark_item_store_name"
            tools:text="부산광역시 북구" />

        <TextView
            android:id="@+id/bookmark_item_created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jalnan"
            android:paddingHorizontal="5dp"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@id/bookmark_item_guide_1"
            app:layout_constraintTop_toBottomOf="@id/bookmark_item_store_address"
            tools:text="2020-07-21에 저장됨" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bookmark_item_guide_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bookmark_item_guide_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

